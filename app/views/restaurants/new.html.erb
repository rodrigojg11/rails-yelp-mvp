<div class="container border shadow p-4 mt-4">
  <h1>Add a new restaurant</h1>

  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
    <%= f.submit "Create restaurant", class: "btn btn-primary" %>
  <% end %>

  <%= link_to "Back to all restaurants", restaurants_path, class: "btn btn-secondary" %>
</div>
