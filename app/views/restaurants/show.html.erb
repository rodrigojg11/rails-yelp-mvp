<div class="container border shadow p-4 mt-4">
  <h1><%= @restaurant.name %></h1>
  <p><strong>Address:</strong> <%= @restaurant.address %></p>
  <p><strong>Phone:</strong> <%= @restaurant.phone_number %></p>
  <p><strong>Category:</strong> <%= @restaurant.category.capitalize %></p>

  <h2>Reviews</h2>
  <ul>
    <% @restaurant.reviews.each do |review| %>
      <li>
        <p><strong>Rating:</strong> <%= '⭐' * review.rating %></p>
        <p><%= review.content %></p>
      </li>
    <% end %>
  </ul>

  <h3>Add a review</h3>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating, collection: 0..5 %>
    <%= f.input :content %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>

  <%= link_to "Back to all restaurants", restaurants_path, class: "btn btn-secondary" %>
</div>
